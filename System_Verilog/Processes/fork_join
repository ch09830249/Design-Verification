    %end;
t_3 ;
    %delay 10, 0;
    %vpi_call/w 3 27 "$display", "[%0t ns] Thread3: Banana is a good fruit", $time {0 0 0};
    %end;
    .scope S_000001f634f32ce0;
t_0 ;
    %vpi_call/w 3 31 "$display", "[%0t ns] After Fork-Join", $time {0 0 0};
    %end;
    .thread T_0;
