:ivl_version "12.0 (devel)" "(s20150603-1539-g2693dd32b)";
:ivl_delay_selection "TYPICAL";
:vpi_time_precision + 0;
:vpi_module "D:\iverilog\lib\ivl\system.vpi";
:vpi_module "D:\iverilog\lib\ivl\vhdl_sys.vpi";
:vpi_module "D:\iverilog\lib\ivl\vhdl_textio.vpi";
:vpi_module "D:\iverilog\lib\ivl\v2005_math.vpi";
:vpi_module "D:\iverilog\lib\ivl\va_math.vpi";
:vpi_module "D:\iverilog\lib\ivl\v2009.vpi";
S_0000024ccdf08b20 .scope package, "$unit" "$unit" 2 1;
 .timescale 0 0;
S_0000024ccdf0dee0 .scope module, "tb_top" "tb_top" 3 1;
 .timescale 0 0;
    .scope S_0000024ccdf0dee0;
T_0 ;
    %fork t_1, S_0000024ccdf0dee0;
    %fork t_2, S_0000024ccdf0dee0;
    %fork t_3, S_0000024ccdf0dee0;
    %join;
    %join/detach 2;
    %jmp t_0;
t_1 ;
    %delay 40, 0;
    %vpi_call/w 3 9 "$display", "[%0t ns] Show #40 $display statement", $time {0 0 0};
    %end;
t_2 ;
    %delay 20, 0;
    %vpi_call/w 3 13 "$display", "[%0t ns] Show #20 $display statement", $time {0 0 0};
    %delay 50, 0;
    %vpi_call/w 3 15 "$display", "[%0t ns] Show #50 $display statement", $time {0 0 0};
    %end;
t_3 ;
    %delay 60, 0;
    %vpi_call/w 3 19 "$display", "[%0t ns] TIMEOUT", $time {0 0 0};
    %end;
    .scope S_0000024ccdf0dee0;
t_0 ;
    %vpi_call/w 3 23 "$display", "[%0t ns] Fork join is done, wait fork to end", $time {0 0 0};
    %fork t_5, S_0000024ccdf0dee0;
    %fork t_6, S_0000024ccdf0dee0;
    %join;
    %join/detach 1;
    %jmp t_4;
t_5 ;
    %delay 10, 0;
    %vpi_call/w 3 27 "$display", "[%0t ns] Wait for 10", $time {0 0 0};
    %end;
t_6 ;
    %delay 20, 0;
    %vpi_call/w 3 28 "$display", "[%0t ns] Wait for 20", $time {0 0 0};
    %end;
    .scope S_0000024ccdf0dee0;
t_4 ;
    %wait/fork;
    %vpi_call/w 3 33 "$display", "[%0t ns] Fork join is over", $time {0 0 0};
    %end;
    .thread T_0;
# The file index is used to find the file name in the following table.
