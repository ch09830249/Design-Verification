:vpi_module "D:\iverilog\lib\ivl\v2009.vpi";
S_0000018efcb67f70 .scope package, "$unit" "$unit" 2 1;
 .timescale 0 0;
S_0000018efcb68100 .scope module, "tb" "tb" 3 1;
 .timescale 0 0;
    .scope S_0000018efcb68100;
T_0 ;
    %vpi_call/w 3 3 "$display", "[%0t] Main Thread: Fork join going to start", $time {0 0 0};
    %fork t_1, S_0000018efcb68100;
    %fork t_2, S_0000018efcb68100;
    %fork t_3, S_0000018efcb68100;
    %join;
    %join;
    %join;
    %jmp t_0;
t_1 ;
    %delay 30, 0;
    %vpi_call/w 3 6 "$display", "[%0t] Thread1 finished", $time {0 0 0};
    %end;
t_2 ;
    %delay 5, 0;
    %vpi_call/w 3 10 "$display", "[%0t] Thread2 ...", $time {0 0 0};
    %delay 10, 0;
    %vpi_call/w 3 11 "$display", "[%0t] Thread2 finished", $time {0 0 0};
    %end;
t_3 ;
    %delay 20, 0;
    %vpi_call/w 3 15 "$display", "[%0t] Thread3 finished", $time {0 0 0};
    %end;
    .scope S_0000018efcb68100;
t_0 ;
    %vpi_call/w 3 17 "$display", "[%0t] Main Thread: Fork join has finished", $time {0 0 0};
    %end;
    .thread T_0;
