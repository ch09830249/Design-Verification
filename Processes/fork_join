    %vpi_call/w 3 14 "$display", "[%0t ns] Thread2: Apple keeps the doctor away", $time {0 0 0};
    %delay 4, 0;
    %vpi_call/w 3 15 "$display", "[%0t ns] Thread2: But not anymore", $time {0 0 0};
    %end;
t_3 ;
    %delay 10, 0;
    %vpi_call/w 3 19 "$display", "[%0t ns] Thread3: Banana is a good fruit", $time {0 0 0};
    %end;
    .scope S_000002170fa52720;
t_0 ;
    %vpi_call/w 3 23 "$display", "[%0t ns] After Fork-Join", $time {0 0 0};
    %end;
    .thread T_0;
