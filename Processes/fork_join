    .scope S_000002170fa52720;
T_0 ;
    %delay 1, 0;
    %vpi_call/w 3 4 "$display", "[%0t ns] Start fork ...", $time {0 0 0};
    %fork t_1, S_000002170fa52720;
    %fork t_2, S_000002170fa52720;
    %fork t_3, S_000002170fa52720;
    %join;
    %join;
    %join;
    %jmp t_0;
t_1 ;
    %delay 5, 0;
    %vpi_call/w 3 10 "$display", "[%0t ns] Thread1: Orange is named after orange", $time {0 0 0};
    %end;
t_2 ;
